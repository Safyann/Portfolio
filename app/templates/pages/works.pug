extends ../template

block variables
    -var title = 'Мои работы'
    include ../common/variables.pug

block content
    .wrapper
        include ../common/header.pug
        main.main.main--works
            include ../common/hero.pug
            svg.triangles.triangles--works(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1200 108" preserveaspectratio="none")
                polygon.triangle__left(points="0,0 0,108 601,108 601,105")
                polygon.triangle__right(points="1200,0 1200,108 599,108 599,105")
            section.section.works
                .title__wrapper.title__wrapper--works
                    h2.title.title--works Мои работы
                    svg.title__bg.title__bg--works
                        use(xlink:href="img/icons/symbol/sprite.svg#works_header")
                include ../common/slider.pug
            section.section.comments
                .title__wrapper.title__wrapper--comments
                    h2.title.title--comments Что обо мне говорят
                    svg.title__bg.title__bg--comments
                        use(xlink:href="img/icons/symbol/sprite.svg#about_header")
                ul.comments__list
                    each item in commentsList
                        li.comments__item
                            .comments__text.text
                                p #{item.comment}
                            .comments__photo
                                img(src=`${item.img}` alt=`${item.person}`).comments__img
                            .comments__person
                                .comments__person--name #{item.person}
                                .comments__person--occupation #{item.occupation}
                .contact-form__wrapper
                    .contact-form__blur
                    .contact-form
                        .subtitle.subtitle--contactform Связаться со мной
                        form(action="server.php" method="post").form#form.form--contacts
                            input.form__input(type="text" placeholder="Имя" name="name" required)
                            input.form__input(type="email" placeholder="Email" name="email" required)
                            textarea.form__input.form__input--textarea(placeholder="Ваше сообщение" name="message")
                            .form__buttons
                                button.form__button.form__button--submit(type="submit" name="submit") Отправить
                                button.form__button.form__button--reset(type="reset" name="reset") Очистить
                    .contact-form__status Сообщение отправлено
                        button.contact-form__status-btn(type="button" name="close") Закрыть
                button.comments__btn-arrow(type="button")
                    svg.comments__arrow-up
                        use(xlink:href="img/icons/symbol/sprite.svg#portf_arrow_up")
        include ../common/footer.pug